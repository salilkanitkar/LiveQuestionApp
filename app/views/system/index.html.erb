<h1>Askuery</h1>

<% if session[:id] %>
   <p> Logged in as <%= session[:username]%> <%= link_to "Sign Out", :controller => 'sessions', :action => 'destroy' %> </p>
   <%= form_tag(:action => 'add_new_post', :user_id => session[:id]) do %>
        <%= text_area_tag(:question, "Ask your Question here") %>
        <%= submit_tag("New Post") %>
    <% end %>
<% else %>
    <p>You need to login to post a new question! <%= link_to "Sign In", :controller => 'sessions', :action => 'new' %></p>
<% end %>


<% for item in @posts %>
    <div id="post">
      <div id="votes" >
         Votes <%= item.numOfVotes %>
      </div>
      <div id="content" >
         <%= item.question %>
      </div>
      <div id="uname">
        posted by <%= h get_user_name_from_user_id(item.user_id) %>
      </div>
    </div>
    <br />
<% end %>


<p>Find me in app/views/system/index.html.erb</p>
