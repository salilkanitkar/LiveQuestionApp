<h1>Listing posts</h1>

<table>
  <tr>
    <th>Question</th>
    <th>Numofvotes</th>
    <th>Parent</th>
    <th>Rating</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.question %></td>
    <td><%= post.numOfVotes %></td>
    <td><%= post.parent %></td>
    <td><%= post.rating %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

