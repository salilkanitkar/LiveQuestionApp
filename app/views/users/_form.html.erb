<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <% if session[:id] and session[:isadmin] == 1 %>
      <div class="field">
          <br />
          <%= f.label "Check to grant Admin Rights" %>
          <%= f.check_box :isadmin %>
    </div>
  <% end %>


  <div class="actions">
    <br />
    <div class="form-button-other-panel">
      <% if session[:id] and session[:isadmin] == 1 %>
        <%= f.submit "Create User", :from_list => '1', :class => 'form-button-other'  %>
      <% else %>
        <%= f.submit "Sign Up", :class => 'form-button-other' %>
      <% end %>
    </div>
    <hr>
  </div>
<% end %>
