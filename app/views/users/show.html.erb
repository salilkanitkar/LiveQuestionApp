<p id="notice"><%= notice %></p>

<hr />
<h2>User Profile</h2>

<p>
  <b>Username:</b>
  <%= @user.username %>
</p>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<% if @numofposts == 0 %>
    <p>
      <b>This user has not posted any questions yet.</b>
    </p>
<% else %>
    <p>
      <b>Number of Posts by this User:</b>
      <%= @numofposts %>
    </p>
<% end %>

<% if @user.isadmin == 1 %>
<p>
  <b>This user has Admin Functionality.</b>
</p>
<% end %>

<hr />
<%= link_to 'Go To Homepage',  :controller => 'system', :action => 'index' %>
